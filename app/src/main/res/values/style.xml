<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.App.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">#828282</item>
        <item name="android:textColorHint">#828282</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="AppNoteTitleView" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="AppNoteBodyView" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">18.4sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="AppNoteBodyTruncated" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">14.4sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="AppNoteFABDescription" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#CCC2FE</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="FloatingActionButtonExt" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
    </style>

    <style name="SwitcherActive" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/switcher_active</item>
    </style>

    <style name="SwitcherInactive" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/switcher_inactive</item>
    </style>
</resources>